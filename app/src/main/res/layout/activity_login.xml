<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo"
        android:alpha="0.3" />

    <!-- Capa semitransparente -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageView
        android:id="@+id/letrero"
        android:layout_width="258dp"
        android:layout_height="191dp"
        android:scaleType="centerCrop"
        android:src="@drawable/letrero"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp" />

    <!-- Contenido del login (CON MARGEN INFERIOR) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_marginBottom="60dp">  <!-- IMPORTANTE: espacio para el toolbar -->

        <!-- Espacio superior -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Campo Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Example@gmail.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_input"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="#B3000000"
            android:layout_marginBottom="16dp" />

        <!-- Campo Contraseña -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp" />

        <!-- Campo Contraseña con ojo dentro -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="*********"
                android:inputType="textPassword"
                android:background="@drawable/bg_input"
                android:paddingStart="16dp"
                android:paddingEnd="50dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#B3000000" />

            <ImageView
                android:id="@+id/ivTogglePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:src="@drawable/ic_visibility" /> <!-- Cambiado a ic_visibility_off -->

        </FrameLayout>

        <!-- Olvidaste tu contraseña -->
        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Olvidaste tu contraseña?"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_marginBottom="32dp" />

        <!-- Botón Ingresar -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="#FF9700"
            android:text="Ingresar"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Espacio inferior (opcional, puedes ajustar) -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

    </LinearLayout>

    <!-- Toolbar Inferior con iconos centrados -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:elevation="10dp">

        <!-- Espacio izquierdo -->
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Icono de Google -->
        <ImageView
            android:id="@+id/ivGoogleLogin"
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/icono_google"
            android:tooltipText="Iniciar sesión con Google" />

        <!-- Espacio entre iconos -->
        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <!-- Icono de la Empresa -->
        <ImageView
            android:id="@+id/ivEmpresaLogin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/letrero"
            android:tooltipText="Iniciar sesión con Empresa" />

        <!-- Espacio derecho -->
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

</FrameLayout>