<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo"
        android:alpha="0.3" />

    <!-- Capa semitransparente -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000" />

    <!-- Contenido del registro (SCROLLABLE) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro de Usuario"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FF9700"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Campo Nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Ingresa tu nombre"
                android:background="@drawable/bg_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#B3000000"
                android:layout_marginBottom="16dp" />

            <!-- Campo Apellidos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellidos"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etApellidos"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Ingresa tus apellidos"
                android:background="@drawable/bg_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#B3000000"
                android:layout_marginBottom="16dp" />

            <!-- Campo Número de teléfono -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de teléfono"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etTelefono"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Ej: 5512345678"
                android:inputType="phone"
                android:background="@drawable/bg_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#B3000000"
                android:layout_marginBottom="16dp" />

            <!-- Campo Correo electrónico -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo electrónico"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="ejemplo@gmail.com"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#B3000000"
                android:layout_marginBottom="16dp" />

            <!-- Campo Redes sociales -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Redes sociales"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etRedes"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="usuario"
                android:background="@drawable/bg_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#B3000000"
                android:layout_marginBottom="16dp" />

            <!-- Campo Domicilio -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Domicilio"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etDomicilio"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Calle, número, colonia"
                android:background="@drawable/bg_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#B3000000"
                android:layout_marginBottom="16dp" />

            <!-- Campo Contraseña -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contraseña"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Mínimo 6 caracteres"
                    android:inputType="textPassword"
                    android:background="@drawable/bg_input"
                    android:paddingStart="16dp"
                    android:paddingEnd="50dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#B3000000" />

                <ImageView
                    android:id="@+id/ivTogglePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:src="@drawable/ic_visibility" />
            </FrameLayout>

            <!-- Campo Confirmar Contraseña -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmar contraseña"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Repite tu contraseña"
                    android:inputType="textPassword"
                    android:background="@drawable/bg_input"
                    android:paddingStart="16dp"
                    android:paddingEnd="50dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#B3000000" />

                <ImageView
                    android:id="@+id/ivToggleConfirmPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:src="@drawable/ic_visibility" />
            </FrameLayout>

            <!-- Botón Registrarse -->
            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#FF9700"
                android:text="Registrarse"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Texto para ir al login -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Ya tienes cuenta? Inicia sesión"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:onClick="irALogin" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>